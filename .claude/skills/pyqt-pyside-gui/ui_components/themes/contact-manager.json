{
  "theme": {
    "name": "contact-manager",
    "version": "1.0.0",
    "description": "Contact Manager application theme with modern blue color scheme"
  },

  "colors": {
    "primary": {
      "main": "#2563eb",
      "dark": "#1d4ed8",
      "light": "#60a5fa",
      "contrast": "#ffffff"
    },
    "secondary": {
      "main": "#64748b",
      "dark": "#475569",
      "light": "#94a3b8",
      "contrast": "#ffffff"
    },
    "success": {
      "main": "#10b981",
      "dark": "#059669",
      "light": "#34d399",
      "contrast": "#ffffff"
    },
    "danger": {
      "main": "#ef4444",
      "dark": "#dc2626",
      "light": "#f87171",
      "contrast": "#ffffff"
    },
    "warning": {
      "main": "#f59e0b",
      "dark": "#d97706",
      "light": "#fbbf24",
      "contrast": "#ffffff"
    },
    "info": {
      "main": "#3b82f6",
      "dark": "#2563eb",
      "light": "#60a5fa",
      "contrast": "#ffffff"
    },
    "text": {
      "primary": "#1e293b",
      "secondary": "#64748b",
      "disabled": "#cbd5e1",
      "hint": "#94a3b8"
    },
    "background": {
      "default": "#f8fafc",
      "paper": "#ffffff",
      "hover": "#f1f5f9"
    },
    "border": {
      "main": "#e2e8f0",
      "dark": "#cbd5e1",
      "light": "#f1f5f9"
    }
  },

  "typography": {
    "fontFamily": {
      "default": "Segoe UI, Roboto, Arial, sans-serif",
      "monospace": "Consolas, Monaco, Courier New, monospace"
    },
    "fontSize": {
      "xxlarge": 28,
      "xlarge": 24,
      "large": 18,
      "normal": 14,
      "small": 12,
      "xsmall": 10
    },
    "fontWeight": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.8
    }
  },

  "spacing": {
    "none": 0,
    "xxsmall": 2,
    "xsmall": 4,
    "small": 8,
    "normal": 12,
    "medium": 16,
    "large": 24,
    "xlarge": 32,
    "xxlarge": 48
  },

  "borderRadius": {
    "none": 0,
    "small": 2,
    "normal": 4,
    "medium": 6,
    "large": 8,
    "xlarge": 12,
    "round": 9999
  },

  "shadow": {
    "none": "none",
    "small": "0 1px 3px rgba(37, 99, 235, 0.1)",
    "normal": "0 2px 6px rgba(37, 99, 235, 0.12)",
    "large": "0 4px 12px rgba(37, 99, 235, 0.15)",
    "xlarge": "0 8px 24px rgba(37, 99, 235, 0.18)"
  },

  "transitions": {
    "fast": 150,
    "normal": 250,
    "slow": 350
  },

  "components": {
    "button": {
      "primary": {
        "backgroundColor": "{colors.primary.main}",
        "color": "{colors.primary.contrast}",
        "borderRadius": "{borderRadius.normal}",
        "padding": "{spacing.small} {spacing.medium}",
        "fontSize": "{typography.fontSize.normal}",
        "fontWeight": "{typography.fontWeight.medium}",
        "border": "none",
        "hover": {
          "backgroundColor": "{colors.primary.dark}"
        },
        "pressed": {
          "backgroundColor": "{colors.primary.dark}"
        },
        "disabled": {
          "backgroundColor": "{colors.border.main}",
          "color": "{colors.text.disabled}"
        }
      },
      "secondary": {
        "backgroundColor": "{colors.secondary.main}",
        "color": "{colors.secondary.contrast}",
        "borderRadius": "{borderRadius.normal}",
        "padding": "{spacing.small} {spacing.medium}",
        "fontSize": "{typography.fontSize.normal}",
        "fontWeight": "{typography.fontWeight.medium}",
        "border": "none",
        "hover": {
          "backgroundColor": "{colors.secondary.dark}"
        },
        "pressed": {
          "backgroundColor": "{colors.secondary.dark}"
        },
        "disabled": {
          "backgroundColor": "{colors.border.main}",
          "color": "{colors.text.disabled}"
        }
      },
      "success": {
        "backgroundColor": "{colors.success.main}",
        "color": "{colors.success.contrast}",
        "borderRadius": "{borderRadius.normal}",
        "padding": "{spacing.small} {spacing.medium}",
        "fontSize": "{typography.fontSize.normal}",
        "fontWeight": "{typography.fontWeight.medium}",
        "border": "none",
        "hover": {
          "backgroundColor": "{colors.success.dark}"
        },
        "pressed": {
          "backgroundColor": "{colors.success.dark}"
        },
        "disabled": {
          "backgroundColor": "{colors.border.main}",
          "color": "{colors.text.disabled}"
        }
      },
      "danger": {
        "backgroundColor": "{colors.danger.main}",
        "color": "{colors.danger.contrast}",
        "borderRadius": "{borderRadius.normal}",
        "padding": "{spacing.small} {spacing.medium}",
        "fontSize": "{typography.fontSize.normal}",
        "fontWeight": "{typography.fontWeight.medium}",
        "border": "none",
        "hover": {
          "backgroundColor": "{colors.danger.dark}"
        },
        "pressed": {
          "backgroundColor": "{colors.danger.dark}"
        },
        "disabled": {
          "backgroundColor": "{colors.border.main}",
          "color": "{colors.text.disabled}"
        }
      },
      "outline": {
        "backgroundColor": "transparent",
        "color": "{colors.primary.main}",
        "border": "2px solid {colors.primary.main}",
        "borderRadius": "{borderRadius.normal}",
        "padding": "{spacing.small} {spacing.medium}",
        "fontSize": "{typography.fontSize.normal}",
        "fontWeight": "{typography.fontWeight.medium}",
        "hover": {
          "backgroundColor": "{colors.primary.light}",
          "color": "{colors.primary.contrast}",
          "border": "2px solid {colors.primary.light}"
        },
        "pressed": {
          "backgroundColor": "{colors.primary.dark}",
          "border": "2px solid {colors.primary.dark}"
        },
        "disabled": {
          "backgroundColor": "transparent",
          "color": "{colors.text.disabled}",
          "border": "2px solid {colors.border.main}"
        }
      },
      "text": {
        "backgroundColor": "transparent",
        "color": "{colors.primary.main}",
        "border": "none",
        "padding": "{spacing.small} {spacing.medium}",
        "fontSize": "{typography.fontSize.normal}",
        "fontWeight": "{typography.fontWeight.medium}",
        "hover": {
          "backgroundColor": "{colors.background.hover}"
        },
        "pressed": {
          "backgroundColor": "{colors.border.main}"
        },
        "disabled": {
          "color": "{colors.text.disabled}"
        }
      },
      "sizes": {
        "small": {
          "padding": "{spacing.xsmall} {spacing.normal}",
          "fontSize": "{typography.fontSize.small}"
        },
        "normal": {
          "padding": "{spacing.small} {spacing.medium}",
          "fontSize": "{typography.fontSize.normal}"
        },
        "large": {
          "padding": "{spacing.medium} {spacing.large}",
          "fontSize": "{typography.fontSize.large}"
        }
      }
    },

    "input": {
      "default": {
        "backgroundColor": "{colors.background.paper}",
        "color": "{colors.text.primary}",
        "border": "2px solid {colors.border.main}",
        "borderRadius": "{borderRadius.normal}",
        "padding": "{spacing.small}",
        "fontSize": "{typography.fontSize.normal}",
        "fontFamily": "{typography.fontFamily.default}",
        "focus": {
          "borderColor": "{colors.primary.main}"
        },
        "hover": {
          "borderColor": "{colors.border.dark}"
        },
        "disabled": {
          "backgroundColor": "{colors.background.default}",
          "color": "{colors.text.disabled}",
          "borderColor": "{colors.border.main}"
        },
        "error": {
          "borderColor": "{colors.danger.main}"
        }
      }
    },

    "card": {
      "default": {
        "backgroundColor": "{colors.background.paper}",
        "border": "1px solid {colors.border.main}",
        "borderRadius": "{borderRadius.medium}",
        "padding": "{spacing.medium}",
        "shadow": "{shadow.small}"
      }
    },

    "label": {
      "title": {
        "fontSize": "{typography.fontSize.xlarge}",
        "fontWeight": "{typography.fontWeight.bold}",
        "color": "{colors.text.primary}",
        "fontFamily": "{typography.fontFamily.default}"
      },
      "heading": {
        "fontSize": "{typography.fontSize.large}",
        "fontWeight": "{typography.fontWeight.bold}",
        "color": "{colors.text.primary}",
        "fontFamily": "{typography.fontFamily.default}"
      },
      "normal": {
        "fontSize": "{typography.fontSize.normal}",
        "fontWeight": "{typography.fontWeight.normal}",
        "color": "{colors.text.primary}",
        "fontFamily": "{typography.fontFamily.default}"
      },
      "small": {
        "fontSize": "{typography.fontSize.small}",
        "fontWeight": "{typography.fontWeight.normal}",
        "color": "{colors.text.secondary}",
        "fontFamily": "{typography.fontFamily.default}"
      },
      "caption": {
        "fontSize": "{typography.fontSize.xsmall}",
        "fontWeight": "{typography.fontWeight.normal}",
        "color": "{colors.text.hint}",
        "fontFamily": "{typography.fontFamily.default}"
      }
    },

    "table": {
      "default": {
        "backgroundColor": "{colors.background.paper}",
        "alternateBackgroundColor": "{colors.background.default}",
        "gridlineColor": "{colors.border.main}",
        "border": "1px solid {colors.border.main}",
        "borderRadius": "{borderRadius.normal}",
        "selectionBackgroundColor": "{colors.primary.light}",
        "selectionColor": "{colors.text.primary}",
        "itemPadding": "{spacing.small}",
        "hover": {
          "backgroundColor": "{colors.background.hover}"
        }
      },
      "header": {
        "backgroundColor": "{colors.background.default}",
        "color": "{colors.text.primary}",
        "padding": "{spacing.small}",
        "borderBottom": "2px solid {colors.border.dark}",
        "fontWeight": "{typography.fontWeight.medium}"
      }
    },

    "comboBox": {
      "default": {
        "backgroundColor": "{colors.background.paper}",
        "color": "{colors.text.primary}",
        "border": "2px solid {colors.border.main}",
        "borderRadius": "{borderRadius.normal}",
        "padding": "{spacing.small}",
        "fontSize": "{typography.fontSize.normal}",
        "fontFamily": "{typography.fontFamily.default}",
        "hover": {
          "borderColor": "{colors.primary.main}"
        },
        "focus": {
          "borderColor": "{colors.primary.main}"
        }
      },
      "dropdown": {
        "backgroundColor": "{colors.background.paper}",
        "border": "1px solid {colors.border.main}",
        "selectionBackgroundColor": "{colors.primary.main}",
        "selectionColor": "{colors.primary.contrast}"
      }
    }
  }
}
